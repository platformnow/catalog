{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "enabledManagers": [
    "custom.regex"
  ],
  "packageRules": [
    {
      "description": "Package updates from platformnow",
      "groupName": "platformnow packages",
      "automerge": true,
      "matchPackagePatterns": [
        "^ghcr\\.io/platformnow/"
      ]
    },
    {
      "description": "Provider updates",
      "groupName": "crossplane providers",
      "matchPackagePatterns": [
        "^registry\\.upbound\\.io/crossplane/",
        "^xpkg\\.upbound\\.io/crossplane-contrib/",
        "^xpkg\\.upbound\\.io/coopnorge/"
      ]
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "^index\\.json$",
        "^providers/.+/provider\\.yaml$",
        "^packages/.+/package\\.yaml$"
      ],
      "matchStrings": [
        "\"image\":\\s*\"(?<depName>[^\"]+)\"[^}]*\"version\":\\s*\"(?<currentValue>[^\"]+)\"",
        "\"version\":\\s*\"(?<currentValue>[^\"]+)\"[^}]*\"image\":\\s*\"(?<depName>[^\"]+)\"",
        "package:\\s*(?<depName>[^:]+):(?<currentValue>.+)"
      ],
      "datasourceTemplate": "docker",
      "versioningTemplate": "semver",
      "packageNameTemplate": "{{depName}}"
    }
  ],
  "rangeStrategy": "pin",
  "dependencyDashboard": true,
  "prHourlyLimit": 0,
  "prConcurrentLimit": 0
}
