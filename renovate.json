{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "enabledManagers": [
    "custom.regex"
  ],
  "packageRules": [
    {
      "description": "Package updates from platformnow",
      "groupName": "platformnow packages",
      "automerge": true,
      "matchPackageNames": [
        "/^ghcr.io/platformnow//"
      ]
    },
    {
      "description": "Provider updates",
      "groupName": "crossplane providers",
      "matchPackageNames": [
        "/^registry.upbound.io/crossplane//",
        "/^xpkg.upbound.io/crossplane-contrib//",
        "/^xpkg.upbound.io/coopnorge//"
      ]
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "^index\\.json$"
      ],
      "matchStrings": [
        "\"version\": \"(?<currentValue>.*?)\"",
        "\"image\": \"(?<depName>.*?):(?<currentValue>.*?)\""
      ],
      "datasourceTemplate": "docker",
      "extractVersionTemplate": "^v?(?<version>.*)$"
    },
    {
      "customType": "regex",
      "fileMatch": [
        "^packages/.+/package\\.yaml$"
      ],
      "matchStrings": [
        "package: (?<depName>.+):(?<currentValue>.+)"
      ],
      "datasourceTemplate": "docker",
      "versioningTemplate": "semver"
    },
    {
      "customType": "regex",
      "fileMatch": [
        "^providers/.+/provider\\.yaml$"
      ],
      "matchStrings": [
        "package: (?<depName>.+):(?<currentValue>.+)"
      ],
      "datasourceTemplate": "docker",
      "versioningTemplate": "semver"
    }
  ],
  "rangeStrategy": "pin",
  "dependencyDashboard": true,
  "prHourlyLimit": 0,
  "prConcurrentLimit": 0
}
